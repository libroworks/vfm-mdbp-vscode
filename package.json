{
  "publisher": "Libroworks",
  "repository": {
    "type": "git",
    "url": "https://github.com/libroworks/vfm-mdbp-vscode"
  },
  "name": "vfmdbp-vscode",
  "displayName": "vfm_mdbp_vscode",
  "description": "Markdown Book Preview for VSCode with VFM",
  "version": "0.1.9",
  "engines": {
    "vscode": "^1.69.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vfmdbp-vscode.startServer",
    "onCommand:vfmdbp-vscode.stopServer",
    "onCommand:vfmdbp-vscode.toggle",
    "onCommand:vfmdbp-vscode.toggleVS",
    "onCommand:vfmdbp-vscode.exportXML",
    "onCommand:vfmdbp-vscode.previewByConfig",
    "onCommand:vfmdbp-vscode.buildByConfig",
    "onCommand:vfmdbp-vscode.previewThisCLI",
    "onCommand:vfmdbp-vscode.buildThisCLI"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vfmdbp-vscode.startServer",
        "title": "Start Server",
        "category": "vfmdbookpreview"
      },
      {
        "command": "vfmdbp-vscode.stopServer",
        "title": "Stop Server",
        "category": "vfmdbookpreview"
      },
      {
        "command": "vfmdbp-vscode.toggle",
        "title": "Open HTML Preview",
        "category": "vfmdbookpreview"
      },
      {
        "command": "vfmdbp-vscode.toggleVS",
        "title": "Open Vivliostyle Preview",
        "category": "vfmdbookpreview"
      },
      {
        "command": "vfmdbp-vscode.exportXML",
        "title": "Export InDesign XML",
        "category": "vfmdbookpreview"
      },
      {
        "command": "vfmdbp-vscode.previewByConfig",
        "title": "Preview by config.js",
        "category": "vfmdbookpreview"
      },
      {
        "command": "vfmdbp-vscode.buildByConfig",
        "title": "Build PDF by config.js",
        "category": "vfmdbookpreview"
      },
      {
        "command": "vfmdbp-vscode.previewThisCLI",
        "title": "Preview This File By Vivliostyle CLI",
        "category": "vfmdbookpreview"
      },
      {
        "command": "vfmdbp-vscode.buildThisCLI",
        "title": "Build PDF This File By Vivliostyle CLI",
        "category": "vfmdbookpreview"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "14.x",
    "@types/vscode": "^1.69.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.14.0",
    "glob": "^8.0.1",
    "mocha": "^9.2.2",
    "typescript": "^4.6.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "@vivliostyle/vfm": "^1.2.2",
    "cheerio": "^1.0.0-rc.12",
    "chokidar": "^3.5.3",
    "colors": "^1.4.0",
    "connect": "^3.7.0",
    "cors": "^2.8.5",
    "emitter": "^0.0.5",
    "event-stream": "^4.0.1",
    "faye-websocket": "^0.11.4",
    "fs": "^0.0.1-security",
    "highlight.js": "^11.5.1",
    "html-whitespace-sensitive-tag-names": "^2.0.0",
    "http": "^0.0.1-security",
    "http-auth": "^4.1.9",
    "http-proxy": "^1.18.1",
    "image-size": "^1.0.1",
    "lodash": "^4.17.21",
    "marked": "^4.0.18",
    "morgan": "^1.10.0",
    "opn": "^6.0.0",
    "os": "^0.1.2",
    "path": "^0.12.7",
    "proxy-middleware": "^0.15.0",
    "send": "^0.18.0",
    "serve-index": "^1.9.1"
  }
}
